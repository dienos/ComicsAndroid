<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="item"
            type="com.comics.android.jth.domain.model.remote.ComicsItem" />

        <variable
            name="viewModel"
            type="com.comics.android.jth.ui.feature.home.ComicsViewModel" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:onClick="@{() -> viewModel.onHomeItemClick(item)}"
        android:onLongClick="@{() -> viewModel.onHomeItemLongClick(item)}"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_thumbnail"
                android:layout_width="100dp"
                android:layout_height="150dp"
                app:imageHeight="@{item.sizeHeight}"
                app:imageUrl="@{item.thumbnail}"
                app:imageWidth="@{item.sizeWidth}"
                tools:srcCompat="@tools:sample/backgrounds/scenic" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="8dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="3"
                android:text="@{item.title}"
                tools:text="Comic Title Goes Here" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <ToggleButton
                    android:id="@+id/tb_bookmark"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="8dp"
                    android:background="@android:drawable/btn_star"
                    android:checked="@{item.isBookmarked}"
                    android:onClick="@{() -> viewModel.onSingleBookmarkClick(item)}"
                    android:textOff=""
                    android:textOn=""
                    android:visibility="@{!viewModel.isHomeSelectionMode ? View.VISIBLE : View.GONE}" />

                <CheckBox
                    android:id="@+id/cb_home_select"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="8dp"
                    android:onClick="@{() -> viewModel.onHomeItemClick(item)}"
                    android:checked="@{item.isChecked}"
                    android:visibility="@{viewModel.isHomeSelectionMode &amp;&amp; !item.isBookmarked ? View.VISIBLE : View.GONE}" />

            </FrameLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</layout>
